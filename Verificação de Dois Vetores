#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int* ler_vetor(int *vetor, int tamanho){
	for(int i=0;i<tamanho;i++){
		printf("Digite um valor do vetor:");
		scanf("%d",&vetor[i]);
	}
	return vetor;
}

int compara(int* vet_A,int tam_a,int* vet_B, int tam_b){
	int i = 0;
	int tam_maior = tam_a>tam_b ? tam_a : tam_b;
	 while(i<tam_maior){
		 if(vet_A[i]==vet_B[i]){
			 return i; 
		 }
		 i++;
	 }

	return -1;
}

int main(){
	setlocale(LC_ALL, "Portuguese");
	int n_a,n_b,verifica;
	
	printf("Digite o tamanho do vetor A:");
	scanf("%d",&n_a);
	int *vetor_A = (int *)malloc(n_a*sizeof(int));
	ler_vetor(vetor_A,n_a);
	
	printf("Digite o tamanho do vetor B:");
	scanf("%d",&n_b);
	int *vetor_B = (int *)malloc(n_b*sizeof(int));
	ler_vetor(vetor_B,n_b);
	
	verifica = compara(vetor_A,n_a,vetor_B,n_b);
	
	if(verifica !=-1){
		printf("Existe um mesmo elemento no índice %d.",verifica);
	}else{
		printf("Não há nenhum elemento igual na mesma posição.");
	}
	
}
