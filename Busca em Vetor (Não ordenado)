#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int* ler_vetor(int tamanho){
	int *vet = (int *)malloc(tamanho*sizeof(int));
	for(int i=0;i<tamanho;i++){
		printf("Digite um valor do vetor:");
		scanf("%d",&vet[i]);
	}
	return vet;
}

int busca(int* vet,int tamanho,int elemen){
	int i = 0;
	while(i<tamanho){
		if(elemen==vet[i])
			return i;
		i++;
	}
	return 0;
}

int main(){
	setlocale(LC_ALL, "Portuguese");
	int n, elemento, verifica;
	
	printf("Digite o tamanho do vetor:");
	scanf("%d",&n);
	
	int *vetor = ler_vetor(n);
	
	printf("Deseja verificar que qual elemento está no vetor:");
	scanf("%d",&elemento);
	
	verifica = busca(vetor,n,elemento);
	
	if(verifica !=0){
		printf("O elemento %d está no vetor, na posição %d.",elemento,verifica);
	}else{
		printf("O elemento %d não está no vetor.",elemento);
	}
	
}
