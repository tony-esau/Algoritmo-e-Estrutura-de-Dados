#include <stdio.h>
#include <stdlib.h>
#include <locale.h>

int* ler_vetor(int *vetor, int tamanho){
	for(int i=0;i<tamanho;i++){
		printf("Digite um valor do vetor:");
		scanf("%d",&vetor[i]);
	}
	return vetor;
}

int compara(int* vet_A,int tam_a,int* vet_B, int tam_b,int elemen){
	for(int i=0;i<tam_a;i++){
		if(vet_A[i]==elemen){
			return 1;
		}
	}
	for(int j=0;j<tam_b;j++){
		if(vet_B[j]==elemen){
			return 2;
		}
	}
	return 0;
}

int main(){
	setlocale(LC_ALL, "Portuguese");
	int n_a,n_b,elemento,verifica;
	
	printf("Digite o tamanho do vetor A:");
	scanf("%d",&n_a);
	int *vetor_A = (int *)malloc(n_a*sizeof(int));
	ler_vetor(vetor_A,n_a);
	
	printf("Digite o tamanho do vetor B:");
	scanf("%d",&n_b);
	int *vetor_B = (int *)malloc(n_b*sizeof(int));
	ler_vetor(vetor_B,n_b);
	
	printf("Qual elemento você deseja verificar?");
	scanf("%d",&elemento);
	
	verifica = compara(vetor_A,n_a,vetor_B,n_b,elemento);
	
	if(verifica==1){
		printf("O elemento procurado está no Vetor A.");
	}else if(verifica==2){
		printf("O elemento procurado está no Vetor B.");
	}else{
		printf("O elemento digitado não está em nenhium dos vetores.");
	}
	
}
